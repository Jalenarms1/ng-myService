<div class="contain-proj-form w-75 p-4 m-auto bg-light border rounded">
    <div class="input-group input-group-sm mb-3">
        <span class="input-group-text" id="inputGroup-sizing-sm">Title</span>
        <input id="proj-title" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">link</span>
        <input id="proj-link" type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
    </div>

    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">Description</span>
        <textarea id="proj-descr" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg"></textarea>
    </div>

    <div class="input-group d-flex flex-column my-2">
        <label for="image-input" class="my-2 image-label">Showcase image</label>
        <input type="file" name="proj-pic" id="image-input">
    </div>
    <div class="w-100">
        <button class="btn btn-outline-dark mr-auto" id="submit-proj">Add new project</button>

    </div>
</div>